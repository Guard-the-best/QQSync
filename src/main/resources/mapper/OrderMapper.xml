<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.csu.dyp.Persistence.OrderMapper">
    <insert id="addOrder">
        insert into orderInfo (userId, orderDate, shipAddressId, billAddressId, status)
        values(#{userId},now(),#{shipAddress},#{billAddress},1)
    </insert>

    <resultMap id="getOrderMap" type="Order">
        <result column="orderId" property="orderId"/>
        <result column="userId" property="userId"/>
        <result column="orderData" property="orderData"/>
        <result column="shipAddressId" property="shipAddress"/>
        <result column="billAddressId" property="billAddress"/>
        <result column="status" property="status" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>
    </resultMap>

    <select id="getOrder" parameterType="String" resultMap="getOrderMap">
        select *
        from orderInfo
        where userId = #{userId}
    </select>


    <delete id="deleteOrder" parameterType="Order">
        delete
        from orderinfo
        where orderId = #{orderId}
    </delete>

    <update id="updateOrder" parameterType="Order">
        update orderinfo
        <set >
            <if test="userId!=null">userId=#{userId},</if>
            <if test="orderDate!=null">orderDate=#{orderDate},</if>
            <if test="shipAddress!=null">shipAddress=#{shipAddress},</if>
            <if test="billAddress!=null">billAddress=#{billAddress},</if>
            <if test="status!=null">status=#{status,typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler}</if>
        </set>
        where orderId=#{orderId}
    </update>

</mapper>