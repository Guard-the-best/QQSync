    </servlet>
    <servlet-mapping>
        <servlet-name>toCartServlet</servlet-name>
        <url-pattern>/toCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>toModifyInfoServlet</servlet-name>
        <servlet-class>cn.edu.csu.dyp.web.servlet.skipServlet.ToModifyInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toModifyInfoServlet</servlet-name>
        <url-pattern>/toModifyInfoServlet</url-pattern>
