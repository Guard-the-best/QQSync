    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>cn.edu.csu.dyp.web.servlet.Main</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>toLogin</servlet-name>
        <servlet-class>cn.edu.csu.dyp.web.servlet.skipServlet.ToLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toLogin</servlet-name>
        <url-pattern>/toLogin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>toLoginAndRegister</servlet-name>
        <servlet-class>cn.edu.csu.dyp.web.servlet.skipServlet.ToLoginAndRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toLoginAndRegister</servlet-name>
        <url-pattern>/toLoginAndRegister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>cn.edu.csu.dyp.web.servlet.userServlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>toCarouselServlet</servlet-name>
        <servlet-class>cn.edu.csu.dyp.web.servlet.skipServlet.ToCarouselServlet</servlet-class>
